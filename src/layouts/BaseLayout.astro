---
import Header from '../components/UI/Header.astro';
import Footer from '../components/UI/Footer.astro';
import '../styles/global.css';
import { SEO } from "astro-seo";
import { ViewTransitions } from 'astro:transitions';
const {pageTitle,description, noindex, nofollow, canonical} = Astro.props;
import CookieConsentModal from '../components/cookies/cookiesConsentModal';


---
<html lang="es" data-theme="light">
  <head>
    <SEO
    noindex={noindex}
    nofollow={nofollow}
    canonical={canonical}
    
    />
    <meta charset="utf-8" />
    <!-- <link rel="canonical" href=`${baseURL}${Astro.url.pathname}` /> -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
    <meta name="description" content={description} />
    <ViewTransitions/>
  </head>
  <body>
     
    <Header />
        <slot/> 
       
        <Footer />
        <CookieConsentModal client:load/>
    
    <script>
      import "../scripts/menu.js";
    </script>
  </body>
</html>