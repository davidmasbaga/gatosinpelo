---
import BaseLayout from "./BaseLayout.astro";
const {frontmatter} = Astro.props
import { Image } from 'astro:assets';
const StyledContainer ='div'

---

<BaseLayout pageTitle={frontmatter.title} description={frontmatter.description} isNoFollow={frontmatter.nofollow} isNoIndex={frontmatter.noindex}>
  <main
    class="pt-8 pb-16 lg:pt-16 lg:pb-24 bg-white dark:bg-gray-900 antialiased"
  >
    <div class="flex justify-between px-4 mx-auto max-w-screen-xl">
      <article
        class="mx-auto w-full max-w-4xl format format-sm sm:format-base lg:format-lg format-blue dark:format-invert dark:text-white"
      >

      <header class="mb-4 lg:mb-6 not-format">
        <Image class="rounded-xl my-5"        src= {frontmatter.image.url}
        alt={frontmatter.title}
        width="1600"
        height="900"
        decoding="async"
        loading="lazy"
        />
       
         <h1 class="post" class="mb-2 text-3xl font-extrabold leading-tight text-gray-900 lg:mb-6 lg:text-4xl dark:text-white">{frontmatter.title}</h1>
        
         
     </header>
     <StyledContainer class='page_markdown'>
     <slot />
    </StyledContainer>
     
      </article>
    </div>
  </main>
</BaseLayout>
