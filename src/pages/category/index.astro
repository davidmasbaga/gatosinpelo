---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from "astro:content";
const allPosts = await getCollection("posts");
const categories = [...new Set(allPosts.map((post) => post.data.category).flat())];
const pageTitle = "Índice de categorías";
---
<BaseLayout pageTitle={pageTitle} nofollow noindex >
  <div class="categories">
    {categories.map((category) => (
      <p class="category"><a href={`/categories/${category}`}>{category}</a></p>
    ))}
  </div>
</BaseLayout>
<style>
  a {
    color: #00539F;
  }

  .categories {
    display: flex;
    flex-wrap: wrap;
  }

.category {
    margin: 0.25em;
    border: dotted 1px #a1a1a1;
    border-radius: .5em;
    padding: .5em 1em;
    font-size: 1.15em;
    background-color: #F8FCFD;
  }
</style>